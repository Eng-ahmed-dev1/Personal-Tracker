<Window x:Class="Personal_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Height="800" Width="1000">
    <Window.Resources>
        <Style x:Key="For" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border BorderThickness="3"
                                CornerRadius="10"
                                BorderBrush="Black">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#2a2e34">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border CornerRadius="10"
                    BorderBrush="#FF066351"
                    BorderThickness="5"
                    Grid.Row="1" 
                    Grid.RowSpan="2" 
                    Margin="10,0,10,10">
                <StackPanel Orientation="Vertical" Background="White">
                    <Label FontSize="25" 
                           FontWeight="Bold" 
                           Content="Balance" 
                           HorizontalAlignment="Center"
                           Margin="0,100,0,10"/>
                    <TextBox x:Name="txtbalance" 
                             Style="{StaticResource For}" 
                             Width="130" 
                             Height="35" 
                             HorizontalAlignment="Center"
                             Margin="10,0,10,20"/>
                </StackPanel>
            </Border>

            <Rectangle x:Name="ahmed" 
                       Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       Height="66" 
                       Width="66" 
                       Margin="0,-33,0,0" 
                       VerticalAlignment="Top" 
                       RadiusX="100" 
                       RadiusY="100" 
                       Stroke="#FF066351">
                <Rectangle.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="Gray" Offset="1"/>
                    </RadialGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <Label HorizontalContentAlignment="Center" 
                   Grid.Row="2" 
                   x:Name="Labname" 
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   FontWeight="Bold" 
                   FontSize="20" 
                   Foreground="#FF066351"/>
        </Grid>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Content="Tracker" 
                   HorizontalAlignment="Center" 
                   FontWeight="Bold" 
                   FontSize="24" 
                   Foreground="#FF066351" 
                   VerticalAlignment="Center"/>

            <Rectangle Grid.Row="1" 
                       RadiusX="15" 
                       RadiusY="15" 
                       StrokeThickness="3" 
                       Stroke="#FF066351" 
                       Fill="#FFE9EAEC"
                       Margin="0,0,0,10"/>

            <Grid Grid.Row="1" Margin="20,10,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" 
                       Grid.ColumnSpan="3"
                       Content="Notifications" 
                       FontWeight="Bold" 
                       FontSize="18" 
                       Foreground="#FF267163" 
                       Margin="0,0,0,10"/>

                <TextBox Grid.Row="1" 
                         Grid.ColumnSpan="3"
                         BorderThickness="4" 
                         Background="Transparent" 
                         x:Name="Screen2" 
                         FontSize="12" 
                         Foreground="#FF2A2E34" 
                         FontWeight="Bold"
                         Margin="0,0,0,10"/>

                <StackPanel Grid.Row="2" 
                            Grid.Column="0" 
                            Orientation="Vertical" 
                            Margin="0,10,10,10">
                    <Label Content="ID" 
                           FontWeight="Bold" 
                           FontSize="20" 
                           HorizontalAlignment="Left"/>
                    <TextBox x:Name="ForGet" 
                             Style="{StaticResource For}" 
                             Background="Transparent" 
                             Height="40"/>
                </StackPanel>

                <StackPanel Grid.Row="3" 
                            Grid.Column="0" 
                            Orientation="Vertical" 
                            Margin="0,10,10,10">
                    <Label Content="ID" 
                           FontWeight="Bold" 
                           FontSize="20" 
                           HorizontalAlignment="Left"/>
                    <TextBox x:Name="ForDel" 
                             Style="{StaticResource For}" 
                             Background="Transparent" 
                             Height="40"/>
                </StackPanel>

                <Button Grid.Row="2" 
                        Grid.Column="1"
                        Content="Get All" 
                        Background="#FF0B6351" 
                        Foreground="#FFE9EAEC" 
                        FontWeight="Bold" 
                        FontFamily="72 Black" 
                        Height="45"
                        Margin="5,10"
                        Click="GetAll"/>

                <Button Grid.Row="2" 
                        Grid.Column="2"
                        Content="Get Specific User" 
                        Background="#FF0B6351" 
                        Foreground="#FFE9EAEC" 
                        FontWeight="Bold" 
                        FontFamily="72 Black" 
                        Height="45"
                        Margin="5,10"
                        Click="GetSpacificUser"/>

                <Button Grid.Row="3" 
                        Grid.Column="1"
                        Content="Transactions" 
                        Background="#FF0B6351" 
                        Foreground="#FFE9EAEC" 
                        FontWeight="Bold" 
                        FontFamily="72 Black" 
                        Height="45"
                        Margin="5,39,5,12"
                        Click="Trans"/>

                <Button Grid.Row="3" 
                        Grid.Column="2"
                        Content="Delete User" 
                        Background="#FF0B6351" 
                        Foreground="#FFE9EAEC" 
                        FontWeight="Bold" 
                        FontFamily="72 Black" 
                        Height="45"
                        Margin="5,39,5,12"
                        Click="DeleteUser"/>

                <Button Grid.Row="4" 
                        Grid.Column="2"
                        Content="Add New User" 
                        Background="#FF0B6351" 
                        Foreground="#FFE9EAEC" 
                        FontWeight="Bold" 
                        FontFamily="72 Black" 
                        Height="45"
                        Margin="5,10"
                        Click="AddNewUser"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
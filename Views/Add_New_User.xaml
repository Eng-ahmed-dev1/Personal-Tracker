<Window x:Class="Personal_Trackeer.Views.Add_New_User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Trackeer.Views"
        mc:Ignorable="d"
        Title="Signup" Height="717" Width="920" 
        MinHeight="650" MinWidth="800">
    <Window.Resources>
        <Style x:Key="pass" TargetType="PasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate  TargetType="PasswordBox">
                        <Border CornerRadius="5" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Left"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Sign" TargetType="Button">
            <Setter Property="Background" Value="#FF066351"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                           Background="{TemplateBinding Background}"
                           BorderThickness="2"
                           BorderBrush="#FF066351"
                           CornerRadius="15">
                            <ContentPresenter  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#2a2e34">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="White" Height="500" Width="300" CornerRadius="15" BorderThickness="3" BorderBrush="#FF066351" Grid.Column="1">

            <StackPanel  Orientation="Vertical" Background="Transparent"  Height="330" Width="300">


                <Label Content="Welcome !" HorizontalAlignment="Center" Margin="10,20" FontSize="16" FontFamily="Comic Sans MS" FontWeight="ExtraBold"></Label>

                <TextBlock Margin="30,0" Text="UserName" FontWeight="ExtraBold"></TextBlock>
                <TextBox Height="25" Margin="25,0"  Width="250" HorizontalAlignment="Left" x:Name="txtUsername" ></TextBox>

                <TextBlock Margin="30,0" Text="Email" FontWeight="ExtraBold"></TextBlock>
                <TextBox Height="25"  Margin="25,0"  Width="250" HorizontalAlignment="Left" x:Name="txtEmail" ></TextBox>

                <TextBlock Margin="30,0" Text="Password" FontWeight="ExtraBold"></TextBlock>
                <PasswordBox Style="{StaticResource pass}"  Height="25" Margin="25,0"  Width="250" HorizontalAlignment="Left" x:Name="txtPassword" ></PasswordBox>

                <Button   Width="110" Height="30" Margin="10,20" Style="{StaticResource Sign}" Content="Add" Click="AddNewUser" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
